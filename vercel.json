{
  "version": 2,
  
  "installCommand": "npm ci || npm install",
  "buildCommand": "npx vite build",
  "outputDirectory": "dist",
  "functions": {
    "backend/server.js": {
      "includeFiles": "backend/data/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/:match*",
      "destination": "/backend/server"
    }
  ]
}
